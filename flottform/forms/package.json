{
	"name": "@flottform/forms",
	"version": "0.0.1",
	"private": true,
	"license": "SEE LICENSE IN LICENSE.md",
	"description": "Flottform client side SDK",
	"author": "compose.us GmbH",
	"type": "module",
	"files": [
		"src",
		"dist"
	],
	"main": "./dist/index.umd.cjs",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.umd.cjs"
		},
		"./base.css": {
			"import": "./dist/base.css",
			"require": "./dist/base.css"
		},
		"./theme/default.css": {
			"import": "./dist/theme/default.css",
			"require": "./dist/theme/default.css"
		}
	},
	"types": "./dist/index.d.ts",
	"keywords": [
		"browser",
		"client",
		"flottform",
		"forms",
		"webrtc"
	],
	"scripts": {
		"build": "vite build",
		"build:content": "vite build --config vite.config.content.ts",
		"preview": "vite preview",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "pnpm run test:unit",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.15.0",
		"@types/qrcode": "^1.5.5",
		"@vitest/browser": "^2.1.6",
		"globals": "^15.12.0",
		"qrcode": "^1.5.4",
		"vite": "^6.0.0",
		"vite-plugin-dts": "^4.3.0",
		"vitest": "^2.1.6",
		"webdriverio": "^9.4.0"
	}
}
